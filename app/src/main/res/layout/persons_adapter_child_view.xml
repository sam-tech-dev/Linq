<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:background="@color/white"
    android:layout_marginHorizontal="@dimen/dp_4"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/crtv_mail_address"
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/dp_10"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_photo"
            android:layout_width="@dimen/circular_image_diameter"
            android:layout_height="@dimen/circular_image_diameter"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_person_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.i2e1.linq.Ui.CustomAppTextViews.CustomAppTextViewMedium
            android:id="@+id/cmtv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="Sattar Mohammad"
            android:textColor="@color/black_tint1"
            app:layout_constraintStart_toEndOf="@+id/civ_profile_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_phone_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/crtv_phone_number"
            app:layout_constraintStart_toEndOf="@+id/civ_profile_photo"
            app:layout_constraintTop_toTopOf="@+id/crtv_phone_number" />

        <com.i2e1.linq.Ui.CustomAppTextViews.CustomAppTextViewRegular
            android:id="@+id/crtv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="9982854547"
            android:textColor="@color/brown_tint2"
            android:textSize="@dimen/dp_16"
            app:layout_constraintStart_toEndOf="@+id/iv_phone"
            app:layout_constraintTop_toBottomOf="@+id/cmtv_person_name" />

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_mail_outline_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/crtv_email"
            app:layout_constraintStart_toEndOf="@+id/civ_profile_photo"
            app:layout_constraintTop_toTopOf="@+id/crtv_email" />

        <com.i2e1.linq.Ui.CustomAppTextViews.CustomAppTextViewRegular
            android:id="@+id/crtv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="sattar@grampower.com"
            app:layout_constraintStart_toEndOf="@+id/iv_email"
            app:layout_constraintTop_toBottomOf="@+id/crtv_phone_number" />

        <ImageView
            android:id="@+id/iv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_birthday_16dp"
            app:layout_constraintBottom_toBottomOf="@+id/crtv_birthday"
            app:layout_constraintStart_toEndOf="@+id/civ_profile_photo"
            app:layout_constraintTop_toTopOf="@+id/crtv_birthday" />

        <com.i2e1.linq.Ui.CustomAppTextViews.CustomAppTextViewRegular
            android:id="@+id/crtv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="05/06/1995"
            app:layout_constraintStart_toEndOf="@+id/iv_birthday"
            app:layout_constraintTop_toBottomOf="@+id/crtv_email" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>